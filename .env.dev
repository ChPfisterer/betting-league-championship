# Development Environment Variables for Docker Compose
# Copy this file to .env.dev and customize as needed

# Database Configuration
POSTGRES_DB=betting_championship
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_PORT=5432

# Keycloak Configuration
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123
KEYCLOAK_DB=keycloak
KEYCLOAK_REALM=betting-platform
KEYCLOAK_CLIENT_ID=betting-api
KEYCLOAK_CLIENT_SECRET=dev-client-secret
KEYCLOAK_FRONTEND_CLIENT_ID=betting-frontend

# Backend Configuration
SECRET_KEY=dev-secret-key-change-in-production-please
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:4200","http://localhost:8080","http://localhost:8090"]

# Service Ports
BACKEND_PORT=8000
KEYCLOAK_PORT=8090  # Changed from 8080 to avoid conflict with Adminer
ADMINER_PORT=8080

# Build Configuration
BUILD_TARGET=dev