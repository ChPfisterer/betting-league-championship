# Production Environment Configuration

# Database
POSTGRES_DB=betting_platform_prod
POSTGRES_USER=postgres
POSTGRES_PASSWORD=${PROD_DB_PASSWORD}
POSTGRES_PORT=5432

# Keycloak
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=${PROD_KEYCLOAK_ADMIN_PASSWORD}
KEYCLOAK_DB=keycloak_prod
KEYCLOAK_HOSTNAME=auth.bettingplatform.com
KEYCLOAK_PORT=8080
KEYCLOAK_REALM=betting-platform
KEYCLOAK_CLIENT_ID=betting-api
KEYCLOAK_CLIENT_SECRET=${PROD_KEYCLOAK_CLIENT_SECRET}
KEYCLOAK_FRONTEND_CLIENT_ID=betting-frontend

# Backend
BACKEND_PORT=8000
ENVIRONMENT=production
LOG_LEVEL=WARNING
CORS_ORIGINS=https://bettingplatform.com
BUILD_TARGET=prod

# Frontend
FRONTEND_PORT=80
API_URL=https://api.bettingplatform.com
KEYCLOAK_URL=https://auth.bettingplatform.com

# Observability
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=${PROD_GRAFANA_ADMIN_PASSWORD}
GRAFANA_FEATURE_TOGGLES=traceqlEditor
MIMIR_PORT=9009
LOKI_PORT=3100
TEMPO_PORT=3200
ALLOY_PORT=12345

# Production specific
DEBUG=false
HOT_RELOAD=false
AUTO_MIGRATE=false
SSL_ENABLED=true
SECURITY_HEADERS_ENABLED=true